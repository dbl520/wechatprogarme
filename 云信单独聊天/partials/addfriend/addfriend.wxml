<view class='addfriend-wrapper'>
  <view class='addfriend-input-wrapper'>
    <icon type='search' size='20' class='addfriend-search-icon'></icon>
    <input maxlength='20' confirm-type='search' value='{{inputVal}}' placeholder='请输入好友账号' class='addfriend-input' bindconfirm='search' bindinput='textChange'></input>
    <icon wx:if="{{inputVal.length != 0}}" catchtap='clearInput' type='clear' size='17' class='addfriend-clear-icon'></icon>
  </view>
  <text catchtap='cancel' class='addfriend-cancel'>取消</text>
</view>
.login-wrapper {
  width: 100%;
  position: absolute;
  top: 50%;
  margin-top: -440rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #000;
}
.login-wrapper form {
  width: 100%;
}
.login-title {
  display:flex;
  flex-direction:column;
}
.login-title-image {
  width:140rpx;
  height:140rpx;
  margin-bottom:10rpx;
}
.login-title-text {
  color: #aaa;
}

.login-item {
  display: flex;
  flex-direction: row;
  width: 90%;
  height: 60rpx;
  margin: 20rpx auto;
  border-bottom: 1px solid #e7e7e7; 
}

.login-item-text {
  align-self: center;
  margin-right: 20rpx; 
  font-size: 30rpx;
  height: 60rpx; 
}

.login-item-input {
  border: none;
  display: inline-block;
  box-sizing: border-box; 
  /* height: 60rpx; */
   width: 80%; 
  /* width: 100%; */
  font-size: 30rpx;
  /* text-indent: .3em;  */
   padding-left: 10rpx; 
}

.login-submit-btn {
  color: #fff; 
  vertical-align: middle;
  margin: 30rpx;
   background-color: rgb(0, 152, 248);  
}

.login-to-register {
  display: flex;
  justify-content: center;
  font-size: 30rpx;
}

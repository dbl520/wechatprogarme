.inputmodal-wrapper {
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .5);
  z-index: 9998;
}
.inputmodal-wrapper .content {
  width: 500rpx;
  height: 280rpx;
  background-color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -250rpx;
  margin-top: -140rpx;
  border-radius: 20rpx;
  z-index: 9999;
}
.inputmodal-wrapper .content .title {
  width:100%;
  text-align:center;
  line-height:76rpx;
  font-size:36rpx;
}
.inputmodal-wrapper .content .slot {
  height: 110rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.button-group {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 84rpx;
  display: flex;
  flex-direction: row;
  border-top: 2rpx solid #ccc;
}
.button-group .btn {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.button-group .btn-hover {
  background-color: rgba(0, 0, 0, .1);
}